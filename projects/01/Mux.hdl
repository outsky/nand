/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // (a && !s) || (b && s)
	Not(in = sel, out = nsel);
	And(a = a, b = nsel, out = aAndNsel);
	And(a = b, b = sel, out = bAndSel);
	Or(a = aAndNsel, b = bAndSel, out = out);
}